<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">
		{{#if isEditing}}
			{{partial "tickets/_form"}}
		{{else}}
			<span class="badge pull-right">{{status}}</span>
			{{title}}
		</h3>
	</div>
	<div class="panel-body">
		{{description}}
		{{/if}}
	</div>
	<div class="panel-footer">
		{{#if isEditing}}
			<button class="btn btn-default" {{action "done"}}>Done</button>
		{{else}}
			<button class="btn btn-default" {{action "edit"}}>Edit</button>
		{{/if}}
	</div>
</div>